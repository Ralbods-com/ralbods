generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  image         String?
  link          String?          
  Diaries Diary[]
}

model Diary {
  id          Int       @id @default(autoincrement())
  date        String
  title       String
  body        String
  mind        String
  createdAt   DateTime  @default(now()) @map("created_at")
  publishedAt DateTime?
  updatedAt   DateTime  @updatedAt @map("updated_at")
  user User @relation(fields: [userId], references: [id])
  userId      String
  tags        Tag[]
}

model Tag {
  id      Int     @id @default(autoincrement())
  name    String
  diaries Diary[]
}

model DiaryToTag {
  A Int
  B Int

  @@unique([A, B], map: "_DiaryToTag_AB_unique")
  @@index([B], map: "_DiaryToTag_B_index")
  @@map("_DiaryToTag")
}
